<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<RecipeDef>
		<defName>AC_MakeCondensedMilk</defName>
		<label>make condensed milk</label>
		<description>Turn milk into condensed milk by removing water from it and adding sugar.</description>
		<jobString>Turning milk into ricotta.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>1000</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
	
		<recipeUsers>
			<li>AC_DairyProcessingStation</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Milk</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>VCE_RawSugar</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Milk</li>
				<li>VCE_RawSugar</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Milk</li>
				<li>VCE_RawSugar</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_CondensedMilk>5</AC_CondensedMilk>
		</products>
	</RecipeDef>
	

</Defs>
