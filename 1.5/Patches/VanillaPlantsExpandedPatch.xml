<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- Adding Fruits to Dessert Recipes -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "VCE_YoghurtMealBase"]/fixedIngredientFilter</xpath>
					<value>
						<categories>
							<li>VCE_Fruit</li>
						</categories>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "VCE_YoghurtMealBase"]/defaultIngredientFilter</xpath>
					<value>
						<categories>
							<li>VCE_Fruit</li>
						</categories>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName = "VCE_CookYoghurt"]/ingredients/li/filter</xpath>
					<value>
						<categories>
							<li>VCE_Fruit</li>
						</categories>
					</value>
				</li>
				
			</operations>
		</match>
		
	</Operation>
</Patch>

