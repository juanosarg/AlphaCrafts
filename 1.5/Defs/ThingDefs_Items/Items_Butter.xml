<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="RoughPlantBase">
		<defName>AC_Butter</defName>
		<label>butter</label>
		<description>A rich, creamy dairy product made by churning cream, commonly used in cooking, baking, and as a spread.</description>
		<graphicData>
			<texPath>Things/Item/AC_Butter</texPath>
			<graphicClass>AlphaCrafts.Graphic_StackCountByIngredients_Butter</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>10</MarketValue>
			<Nutrition>0.01</Nutrition>
			<Flammability>1</Flammability>
			<Mass>0.2</Mass>
		</statBases>
		<tradeability>Sellable</tradeability>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>120</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Ingredients">
			
			</li>
			<li Class="AlphaCrafts.CompProperties_LabelByIngredients">
				<fullReplace>true</fullReplace>
				<overrides>
					<li>
						<key>SmokeleafLeaves</key>
						<value>Hemp butter</value>
					</li>
					<li>
						<key>RawCorn</key>
						<value>Margarine</value>
					</li>
					<li>
						<key>Chocolate</key>
						<value>Cocoa spread</value>
					</li>
					<li>
						<key>Milk</key>
						<value>Butter</value>
					</li>
				</overrides>
			</li>
		</comps>
		<thingCategories>
			<li>AC_ArtisanProducts</li>
		</thingCategories>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<optimalityOffsetFeedingAnimals>-50</optimalityOffsetFeedingAnimals>
		</ingestible>
		<ingredient>
			<mergeCompatibilityTags>
				<li>Condiments</li>
			</mergeCompatibilityTags>
		</ingredient>
	</ThingDef>
</Defs>
