<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>AC_ExtractPerfume</defName>
		<label>extract perfume</label>
		<description>Transform fragrant flowers into concentrated perfumes, extracting essential oils to create high-quality scents for crafting and trade. Yield of the recipe will depend on the produce being used to get the perfume.</description>
		<jobString>Extracting perfume.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>2500</workAmount>
		<recipeUsers>
			<li>AC_OilPressWorkshop</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawBerries</li>
						<li>Ambrosia</li>
						<li>Dye</li>
						
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawBerries</li>
				<li>Ambrosia</li>
				<li>Dye</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>RawBerries</li>
				<li>Ambrosia</li>
				<li>Dye</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Crafting</workSkill>
		<products>
			<AC_Perfume>10</AC_Perfume>
		</products>
		
		<modExtensions>
			<li Class="AlphaCrafts.VariableOutputByIngredient">
				<baseline>RawBerries</baseline>
			</li>
		</modExtensions>
	</RecipeDef>
</Defs>
