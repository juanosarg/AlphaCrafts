<Defs>

	
	<PipeSystem.ProcessDef>
		<defName>AC_RiceToVinegar</defName>
		<label>Ferment rice into vinegar</label>
		<description>Turns 50 rice into 25 vinegar.</description>
		<useIngredients>true</useIngredients>
		<spawnOnInteractionCell>true</spawnOnInteractionCell>
		<labelOverride>Ferment 50 rice into 25 vinegar</labelOverride>
		<priorityInBillList>10</priorityInBillList>
		<ingredients>
			<li>
				<thing>RawRice</thing>
				<countNeeded>50</countNeeded>
			</li>
		</ingredients>
		<ticks>600000</ticks>
		<results>
			<li>
				<thing>AC_Vinegar</thing>
				<count>25</count>
			</li>
		</results>
		
	</PipeSystem.ProcessDef>
	
