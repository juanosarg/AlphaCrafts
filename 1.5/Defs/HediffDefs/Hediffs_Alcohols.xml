	<HediffDef>
		<defName>AC_SakeHigh</defName>
		<label>sake high</label>
		<labelNoun>a sake high</labelNoun>
		<description>Drank some sake. Mildly increases relaxation and therefore decreases mental break threshold by 5% for a short period.</description>
		<hediffClass>Hediff_Alcohol</hediffClass>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.25</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<MentalBreakThreshold>-0.05</MentalBreakThreshold>
				</statOffsets>
			</li>
