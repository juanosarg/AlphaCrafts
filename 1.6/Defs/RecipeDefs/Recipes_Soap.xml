<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>AC_MakeSoap</defName>
		<label>craft artisan soap</label>
		<description>Carefully mix quality oils with selected essences to create a soothing, fragrant soap.</description>
		<jobString>Crafting artisan soap.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>5000</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<researchPrerequisite>AC_ComplexArtisanalCrafting</researchPrerequisite>
		<recipeUsers>
			<li>AC_ArtisanWorkshop</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_Essence</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AC_Oil</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_Essence</li>
				<li>AC_Oil</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_Essence</li>
				<li>AC_Oil</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_Soap>10</AC_Soap>
		</products>
		<skillRequirements>
			<Cooking>6</Cooking>
		</skillRequirements>
	</RecipeDef>
</Defs>
