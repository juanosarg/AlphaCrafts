<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>AC_GrindFlours</defName>
		<label>grind flour</label>
		<description>Grind produce into fine flour. Yield of the recipe will depend on the produce being used to get the flour, with 50 corn producing 5 flour.</description>
		<jobString>Grinding flour.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>4000</workAmount>
		<recipeUsers>
			<li>AC_ArtisanalGrinder</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCorn</li>
						<li>RawRice</li>
						<li>RawPotatoes</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCorn</li>
				<li>RawRice</li>
				<li>RawPotatoes</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>RawCorn</li>
				<li>RawRice</li>
				<li>RawPotatoes</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_Flour>5</AC_Flour>
		</products>
		<modExtensions>
			<li Class="AlphaCrafts.VariableOutputByIngredient">
				<baseline>RawCorn</baseline>
			</li>
		</modExtensions>
	</RecipeDef>
