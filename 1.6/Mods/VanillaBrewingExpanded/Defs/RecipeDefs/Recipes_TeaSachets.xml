<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>AC_PrepareSpecialtyTeaSachets</defName>
		<label>prepare specialty tea sachets</label>
		<description>Crafts soothing sachets from a blend of artisan herbs and spices, offering unique flavors and calming effects. Yield of the recipe will depend on the produce being used to get the sachet, with 10 berries and 10 tea leaves producing 20 sachets.</description>
		<jobString>Preparing specialty tea sachets.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>80</workAmount>
		<recipeUsers>
			<li>AC_ArtisanWorkshop</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<customSummary>tea leaves</customSummary>
					<thingDefs>
						<li>VBE_RawTea</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li Name="FruitIngredient">
				<filter>
					<customSummary>fruits or flowers</customSummary>
					<thingDefs>
						<li>RawBerries</li>
						<li>AC_Lavender</li>
						<li>AC_FragrantbloomRose</li>
						<li>AC_Hyacinth</li>
						<li>AC_Jasmine</li>
						<li>AC_Lily</li>
						<li>AC_Orchid</li>
						<li>AC_Plumeria</li>
						<li>AC_Tulip</li>
						<li>AC_Vanilla</li>
						<li>AC_Violet</li>
						<li>AC_YlangYlang</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawBerries</li>
				<li>VBE_RawTea</li>
				<li>AC_Lavender</li>
				<li>AC_FragrantbloomRose</li>
				<li>AC_Hyacinth</li>
				<li>AC_Jasmine</li>
				<li>AC_Lily</li>
				<li>AC_Orchid</li>
				<li>AC_Plumeria</li>
				<li>AC_Tulip</li>
				<li>AC_Vanilla</li>
				<li>AC_Violet</li>
				<li>AC_YlangYlang</li>
			</thingDefs>
			<disallowedThingDefs/>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>RawBerries</li>
				<li>VBE_RawTea</li>
				<li>AC_Lavender</li>
				<li>AC_FragrantbloomRose</li>
				<li>AC_Hyacinth</li>
				<li>AC_Jasmine</li>
				<li>AC_Lily</li>
				<li>AC_Orchid</li>
				<li>AC_Plumeria</li>
				<li>AC_Tulip</li>
				<li>AC_Vanilla</li>
				<li>AC_Violet</li>
				<li>AC_YlangYlang</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_TeaSachets>20</AC_TeaSachets>
		</products>
		<modExtensions>
			<li Class="AlphaCrafts.VariableOutputByIngredient">
				<baseline>RawBerries</baseline>
				<exclusions>
					<li>VBE_RawTea</li>
				</exclusions>
			</li>
		</modExtensions>
	</RecipeDef>
</Defs>
