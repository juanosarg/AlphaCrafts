<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>AC_CraftDesertSalve</defName>
		<label>craft desert salve</label>
		<description>Mix aloe vera salves with medicinal cactipine quills to concentrate their healing properties.</description>
		<jobString>Crafting desert salve.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>375</workAmount>
		<recipeUsers>
			<li>AC_ArtisanWorkshop</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AC_AloeVeraSalve</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AA_CactipineQuill</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AC_AloeVeraSalve</li>
				<li>AA_CactipineQuill</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AC_AloeVeraSalve</li>
				<li>AA_CactipineQuill</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_DesertSalve>10</AC_DesertSalve>
		</products>
	</RecipeDef>
	
	<RecipeDef>
		<defName>AC_CraftSkySyrup</defName>
		<label>craft sky syrup</label>
		<description>Turn blue gel into a sweet syrup with strange qualities.</description>
		<jobString>Crafting sky syrup.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>325</workAmount>
		<recipeUsers>
			<li>AC_ArtisanWorkshop</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AA_BlueGel</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
			
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AA_BlueGel</li>
				
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>AA_BlueGel</li>
				
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_SkySyrup>25</AC_SkySyrup>
		</products>
	</RecipeDef>
	
</Defs>
