<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<RecipeDef>
		<defName>AC_MakeBlackMayonnaise</defName>
		<label>make black mayonnaise</label>
		<description>This recipe combines classic mayonnaise with the bold, savory flavor of black garlic. The result is a visually striking, flavorful with a layer of sweetness and umami.</description>
		<jobString>making black mayonnaise.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>4000</workAmount>
		<researchPrerequisite>AC_ComplexArtisanalCrafting</researchPrerequisite>
		<recipeUsers>
			<li>AC_BottlingStation</li>
		</recipeUsers>
		<ingredients>
			<li Name="ProduceIngredient">
				<filter>
					
					<thingDefs>
						<li>AC_BlackGarlic</li>
						
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<customSummary>mayonnaise</customSummary>
					<thingDefs>
						<li>AC_Mayonnaise</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			
		</ingredients>
		<fixedIngredientFilter>
			
			<thingDefs>
				<li>AC_Mayonnaise</li>
				<li>AC_BlackGarlic</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			
			<thingDefs>
				<li>AC_Mayonnaise</li>
				<li>AC_BlackGarlic</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
		<products>
			<AC_BlackMayonnaise>10</AC_BlackMayonnaise>
		</products>
		<skillRequirements>
			<Cooking>10</Cooking>
		</skillRequirements>
		
	</RecipeDef>
	
</Defs>
